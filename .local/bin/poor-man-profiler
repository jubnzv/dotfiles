#!/bin/bash
#
# Modified poor man's profiler by https://poormansprofiler.org/
#
if [ "$#" -ne 3 ]; then
    echo "Usage: $0 <pid> <nsamples> <sleeptime>"
    exit 1
fi

pid=$1
nsamples=$2
sleeptime=$3

for x in $(seq 1 $nsamples)
  do
    gdb -ex "set pagination 0" -ex "thread apply all bt" -batch -p $pid
    sleep $sleeptime
  done | \
awk '
  BEGIN { s = ""; } 
  /^Thread/ { print s; s = ""; } 
  /^\#/ { if (s != "" ) { s = s "," $4} else { s = $4 } } 
  END { print s }' | \
sort | uniq -c | sort -r -n -k 1,1

# :vim:ft=bash:
