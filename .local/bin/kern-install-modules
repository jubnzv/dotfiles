#!/usr/bin/env bash
set -euo pipefail

instdir=$(realpath ../modules_${PWD##*/})
if [ -d $instdir ]; then
    echo "$instdir already exists! Bailing out."
    exit 127
fi

mkdir $instdir
make INSTALL_MOD_PATH=$instdir modules_install

# Remove symlinks to build directory to make scp -r work.
for f in $instdir/lib/modules/*/{source,build}
do
    unlink $f
done
