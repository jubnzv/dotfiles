#!/bin/bash

# There is no `xterm-kitty` in terminfo
export TERM=xterm

alias pd='pushd'
alias pdd='popd'
alias dr='dirs -p'
alias q='exit'
alias s='sudo'

if [ -x /usr/bin/vim ]; then
    alias v='vim'
else
    alias v='vi'
fi

if [ -x /usr/bin/ag ]; then
    alias grep='ag'
else
    alias ag='grep'
fi

# Set up home
homes=('/home/komarov_g' '/home/tester' '/home/jubnzv')
for h in $homes; do
    if [ -d $h ]; then
        # export HOME=$h
        cd $h
        break
    fi
done

# Load sshrc goodies
export VIMINIT="let \$MYVIMRC='$SSHHOME/.sshrc.d/.vimrc' | source \$MYVIMRC"

