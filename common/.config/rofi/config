! General settings
rofi.terminal:  kitty

! Appearance
rofi.font:          Iosevka 13
rofi.color-enabled: true
rofi.theme:         ~/.config/rofi/gruvbox-jubnzv.rasi

! SSH settings
rofi.ssh-client:    ssh
rofi.ssh-command:   {terminal} -e {ssh-client} {host}

! Keybinds
rofi.kb-row-up:         Alt+k,Up,Control+p
rofi.kb-row-down:       Alt+j,Down,Control+n
rofi.kb-accept-entry:   Alt+m,Control+m,Return
rofi.kb-cancel:         Escape,Control+g,Alt+q
