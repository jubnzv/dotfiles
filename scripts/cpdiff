#!/bin/bash
#
# Shows diff before cp.
#

if [ $# -eq 0 ]; then
    echo "Usage: $0 <src> <dest>"
    exit 1
fi

src=$1
dest=$2

diff_text=$(diff -r $src $dest)
if [[ ! -z $diff_text ]]; then
    echo "$src and $dest differs:"
    echo ""
    echo $diff_text
    echo ""
fi

cp -vi $src $dest

# vim: set ft=sh:
