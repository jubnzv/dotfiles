snippet start
options head
	@startuml
	$0
	@enduml

snippet diagram_activity
options head
	title ${1:TITLE}
	start
	- $0
	stop

snippet state
options head
	${1:STATE1} -> ${2:STATE2}
snippet state_start
options head
	[*] --> ${1:STATE1}
snippet state_end
options head
	${1:STATE1} --> [*]

snippet partition
options head
	partition "$1" {
	  $0
	}
