! General {{{1
URxvt*saveLines: 10000
URxvt*scrollBar: false
URxvt.shading:       5

! Scrolling settings {{{2
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true
! }}}2

! URxvt*font: xft:FantasqueSansMono:size=13:antialias=true:hinting=true,xft:Font Awesome:size=10
URxvt*font: xft:FantasqueSansMono Nerd Font:size=13:antialias=true:hinting=true
Xft.autohint: 1
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.dpi: 96
Xft.rgba: rgb
! Fix font spacing
URxvt.letterSpace: -1

Xcursor.theme: Breeze
Xcursor.size: 16
! }}}1

URxvt:meta8: False

!! Perl extensions {{{1
URxvt.perl-lib          : /home/jubnzv/.local/opt/urxvt-perls/
URxvt.perl-ext-common   : default,matcher,keyboard-select,resize-font
!! Matcher
URxvt.urlLauncher       : chromium
URxvt.matcher.button    : 1
!! Keboard-select
URxvt.keysym.M-Tab      : perl:keyboard-select:activate
!! Resize font (use default binds)
!URxvt.keysym.C-minus    : resize-font:smaller
!URxvt.keysym.C-plus     : resize-font:bigger
!URxvt.keysym.C-equal    : resize-font:reset
!URxvt.keysym.C-question : resize-font:show

