# Misc
set guioptions s
set statusbar-home-tilde true
set selection-clipboard clipboard
set adjust-open width
set recolor-reverse-video false
set incremental-search false
set font "Iosevka 10"

# Keybinds
map \< goto top
map \> goto bottom
map b navigate previous
map e follow
map f navigate next
map p goto top
map [normal]     <C-l> reload
map [fullscreen] <C-l> reload
map <C-+> zoom in
map <C--> zoom out
map <C-=> zoom in
map <C-)> adjust_window best-fit
map <C-0> adjust_window width
map <C-a> scroll full-left
map <C-b> scroll left
map [normal]     e scroll full-right
map [fullscreen] e scroll full-right
map <C-e> scroll full-right
map <C-f> scroll right
map <C-g> abort
map <C-n> scroll down
map <C-p> scroll up
map <C-v> scroll full-down
map [normal]     <C-e> scroll down
map [fullscreen] <C-e> scroll down
map [normal]     y scroll up
map [fullscreen] y scroll up
map [normal]     <C-y> scroll up
map [fullscreen] <C-y> scroll up
map <A-\<> goto top
map <A-\>> goto bottom
map <A-v> scroll full-up

unmap d
unmap u
map d scroll half-down
map u scroll half-up

# Show only the file name in the window title.
set window-title-basename true

# Gruvbox dark theme
# https://github.com/Mange/dotfiles/blob/master/config/zathura/zathurarc
# https://github.com/morhetz/gruvbox-contrib/issues/40
set completion-bg \#7c6f64
set completion-fg \#282828
set completion-group-bg \#3c3836
set completion-group-fg \#ebdbb2
set completion-highlight-bg \#83a598
set completion-highlight-fg \#504945
set default-fg \#ebdbb2
set default-bg \#3c3836
set inputbar-fg \#ebdbb2
set inputbar-bg \#282828
set notification-bg \#282828
set notification-fg \#ebdbb2
set notification-error-bg \#fb4934
set notification-error-fg \#282828
set notification-warning-bg \#282828
set notification-warning-fg \#fb4934
set statusbar-bg \#a89984
set statusbar-fg \#282828
set highlight-color \#3c3836
set highlight-active-color \#ebdbb2
set recolor-darkcolor \#ebdbb2
set recolor-lightcolor \#282828
set render-loading-bg \#282828
set render-loading-fg \#ebdbb2
set index-bg \#282828
set index-fg \#98971a
set index-active-bg \#3c3836
set index-active-fg \#98971a
