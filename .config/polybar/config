[module/timer]
type = custom/script
exec = ~/.config/polybar/polybar-timer.sh tail '%{F#585858}ï‰”%{F-}' 5
tail = true
click-left = ~/.config/polybar/polybar-timer.sh new 60 'ï‰’' 'notify-send "Session finished"' ; ~/.config/polybar/polybar-timer.sh update %pid%
click-middle = ~/.config/polybar/polybar-timer.sh cancel ; ~/.config/polybar/polybar-timer.sh update %pid%
click-right = ~/.config/polybar/polybar-timer.sh new 10 'ï‰“' 'notify-send "Break finished"' ; ~/.config/polybar/polybar-timer.sh update %pid%
scroll-up = ~/.config/polybar/polybar-timer.sh increase 60 || ~/.config/polybar/polybar-timer.sh new 1 'TIMER:' 'notify-send -u critical "Timer expired."' ; ~/.config/polybar/polybar-timer.sh update %pid%
scroll-down = ~/.config/polybar/polybar-timer.sh increase -60 ; ~/.config/polybar/polybar-timer.sh update %pid%

[module/notifications-status]
type = custom/script
exec = ~/.config/polybar/notifications-status.sh
interval = 5
format-foreground = ${colors.orange}
