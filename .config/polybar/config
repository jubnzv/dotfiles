[module/docker]
type = custom/script
exec = if [ $(systemctl show --property ActiveState docker | egrep '=active') ]; then echo $(docker ps -q | wc -l); fi
interval = 1
label = ÔÜá %output%
format-underline = ${colors.gray}

[module/active-task]
type = custom/script
exec = ~/.config/polybar/active-task.sh
click-left = "kill -USR1 $(pgrep --oldest --parent %pid%)"
click-right = "kill -USR1 $(pgrep --oldest --parent %pid%)"
format-foreground = ${colors.gray}
format-prefix = "ÔÇç "
label =  %output:0:30:...%
interval = 60
; Will the script output continous content?
tail = true

[module/task-counters]
type = custom/script
exec = ~/.config/polybar/task-counters.sh
format-foreground = ${colors.gray}
label = %output%
interval = 180

